{
	"plugins": [
		"stylelint-order"
	],
	"extends": [
		"stylelint-config-recommended-scss"
	],
	"overrides": [
		{
			"files": [
				"src/**/*.scss"
			],
			"customSyntax": "postcss-scss"
		}
	],
	"rules": {
		"order/order": [
			"custom-properties",
			"declarations"
		],
		"order/properties-alphabetical-order": true
	}
}