{
  "compilerOptions": {
    /* target */
    "target": "ES2024",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* disallow JavaScript */
    "allowJs": false,

    /* build options */
    "outDir": "./dist/scripts",
    "esModuleInterop": true,

    /* strictness */
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true
  },
  "include": ["./src/scripts/**/*"]
}
