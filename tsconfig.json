{
	"compilerOptions": {
		/* Target */
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",

		/* Disallow JavaScript */
		"allowJs": false,

		/* Build Options */
		"outDir": "./dist",
		"esModuleInterop": true,

		/* Strictness */
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"alwaysStrict": true
	},
	"include": ["./src/scripts/**/*"]
}
